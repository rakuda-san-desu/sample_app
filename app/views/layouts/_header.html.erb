<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <!--ログインしていれば（current_userがnilでなければ）-->
        <% if logged_in? %>
          <!--10章で実装-->
          <li><%= link_to t('.Users'), '#' %></li>
          <!--ドロップダウンメニュー-->
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t('.Account') %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <!--自分のプロフィールページへのリンク-->
              <li><%= link_to t('.Profile'), current_user %></li>
              <!--ユーザー設定-->
              <li><%= link_to t('.Settings'), edit_user_path(current_user) %></li>
              <!--ラインをつけてるやつ-->
              <li class="divider"></li>
              <!--ログアウト-->
              <li><%= link_to t('.Log_out'), logout_path, method: :delete %></li>
            </ul>
          </li>
        <!--ログインしていない場合-->
        <% else %>
          <!--ログインリンク-->
          <li><%= link_to t('.Log_in'), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>